<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- info content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <TextView
                                android:id="@+id/text_property_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nyumbani Creative"
                                android:textColor="@color/colorBlack"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/text_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nyumbani Creative"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="francis"
                                android:textColor="@color/colorGray"/>

                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="232dp"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="4dp"
                                android:numStars="5"
                                android:isIndicator="false"
                                android:scaleX="0.3"
                                android:scaleY="0.3"
                                android:theme="@style/RatingBar"
                                android:transformPivotX="0dp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_price_tag"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/from"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="From"
                                    android:textColor="@color/colorGray"
                                    android:textSize="16sp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:text="12,000 TSH"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="12sp" />




                            </LinearLayout>

                            <!-- **** -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="end">
                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginTop="2dp"
                                        android:src="@drawable/ic_near_me_black_24dp"
                                        android:layout_gravity="center_vertical"/>

                                    <TextView
                                        android:id="@+id/text_distance"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="8dp"
                                        android:layout_weight="1"
                                        android:text="12,000 TSH"
                                        android:textColor="@color/colorGray"
                                        android:textSize="12sp"
                                        android:layout_gravity="center_vertical"
                                        />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                        <!-- info content end -->

                        <View
                            android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:background="@color/colorGraylight" />

                        <!-- like -->
                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorWhite"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="false"
                                android:layout_marginTop="12dp">

                                <ImageView
                                    android:id="@+id/inbox"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_chat_fill"
                                    android:layout_gravity="center_horizontal"/>

                                <CheckBox
                                    android:id="@+id/favorite"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/btn_favorite"
                                    android:button="@color/colorWhite"
                                    android:src="@drawable/ic_favorite_border_black"
                                    android:layout_marginTop="10dp"/>

                            </LinearLayout>

                        </RelativeLayout>
                        <!-- like end -->

                    </LinearLayout>



                </LinearLayout>


            </RelativeLayout>

            <!--<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/avarta"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="names"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorGray"/>

            <TextView
                android:id="@+id/user_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="names"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorBlack"/>-->


        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/colorGray"
            android:text=""/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGraylightspecial"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/edittext"
            android:background="@color/colorWhite">

            <iammert.com.expandablelib.ExpandableLayout
                android:id="@+id/el"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:childLayout="@layout/layout_child"
                app:parentLayout="@layout/layout_parent" />

        </ScrollView>


    </LinearLayout>

</ScrollView>
