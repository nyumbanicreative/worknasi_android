<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="worknasi.worknasiapp.RentSpace"
    tools:showIn="@layout/activity_rent_space">


    <!-- all -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="10dp">

        <!-- space name -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/filter_layout_dateaZm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/form_style_preloaded"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_location_city_black_24dp"/>


                <TextView
                    android:id="@+id/booking_text_spacename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wasafi classsic"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

        <!-- space name ends -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/filter_layout_dateaZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_style"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_price_tag"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/booking_text_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45,000/= TSH per hour"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NUMBER OF PEOPLE"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"/>


            <LinearLayout
                android:id="@+id/filter_layout_datea"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/form_style"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_people"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/transparent"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                </LinearLayout>

                <EditText
                    android:id="@+id/booking_edittext_numberofpeople"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Number of people"
                    android:textColorHint="@color/colorGray"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorWhite"
                    android:inputType="numberDecimal"/>

            </LinearLayout>


        </LinearLayout>
        <!-- Date end -->


        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="START TIME"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"/>

            <!-- Date and ti,e picker -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/booking_layout_date"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/form_style"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_date_range_black"/>

                    <TextView
                        android:id="@+id/booking_text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/booking_layout_time"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_style"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_timer_black_24dp"/>

                    <TextView
                        android:id="@+id/booking_text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <!-- Date end -->


        <!-- Number of people -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/booking_text_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DURATION"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"/>


            <LinearLayout
                android:id="@+id/filter_layout_dateaLLL"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/form_style"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_timelapse"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/transparent"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                </LinearLayout>

                <EditText
                    android:id="@+id/booking_edittext_duration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Duration"
                    android:textColorHint="@color/colorGray"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorWhite"
                    android:inputType="numberDecimal"/>

            </LinearLayout>


            <!--button-->
            <RelativeLayout
                android:id="@+id/booking_layout_submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/form_style_button"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/filter_text_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RENT NOW"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"/>

                </LinearLayout>


            </RelativeLayout>
            <!--button-->

        </LinearLayout>
        <!--End Number of people -->
    </LinearLayout>

</ScrollView>
